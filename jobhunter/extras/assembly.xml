<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <!-- include all runtime libraries in the /lib folder of the output file -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>jobhunter:infojobs-plugin</exclude>
                <exclude>jobhunter:infoempleo-plugin</exclude>
                <exclude>jobhunter:monster-plugin</exclude>
                <exclude>jobhunter:cb-plugin</exclude>
                <exclude>jobhunter:dice-plugin</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- Put configuration files in conf -->
        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory>/etc</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
        </fileSet>

        <!-- Our MVEL templates -->
        <fileSet>
            <directory>src/main/resources/templates/</directory>
            <outputDirectory>/templates</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>*.html</include>
                <include>*.ftl</include>
            </includes>
        </fileSet>

        <!-- Put the startup script -->
        <fileSet>
            <directory>extras/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>jobhunter</include>
            </includes>
            <fileMode>0777</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        
    </fileSets>

</assembly>
